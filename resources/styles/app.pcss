@tailwind base;

@tailwind components;

@tailwind utilities;

@layer base {
    html {
        scroll-behavior: smooth;
    }

    [x-cloak] {
        display: none !important;
    }
}

@layer components {
    .card + .card {
        @apply mt-6;
    }

    .map {
        @apply max-w-full;
        max-height: 450px;
        height: 67.5vw;
        width: 90vw;
    }

    @screen lg {
        .map {
            max-width: 600px;
        }
    }
}
